<Window x:Class="laba5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba5"
        mc:Ignorable="d"
        Title="Різні Margin для кнопок" Height="300" Width="400">

    <Window.Resources>
        <!-- Ресурси з різними відступами -->
        <Thickness x:Key="MarginSmall">5,5,5,5</Thickness>
        <Thickness x:Key="MarginMedium">15,10,15,10</Thickness>
        <Thickness x:Key="MarginLarge">30,20,30,20</Thickness>
    </Window.Resources>

    <StackPanel>
        <Button Content="Маленький Margin" Margin="{StaticResource MarginSmall}" Background="LightGray" Click="Button_Click"/>
        <Button Content="Середній Margin" Margin="{StaticResource MarginMedium}" Background="LightBlue" Click="Button_Click"/>
        <Button Content="Великий Margin" Margin="{StaticResource MarginLarge}" Background="LightGreen" Click="Button_Click"/>
        <TextBlock x:Name="txtInfo" Margin="10" FontWeight="Bold" Foreground="DarkBlue"/>
    </StackPanel>
</Window>